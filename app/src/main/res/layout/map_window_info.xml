<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="@drawable/spiner_ui"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="310sp"
        android:orientation="vertical"
        android:padding="@dimen/page_margin"
        android:layout_height="wrap_content">
    <ImageView
        android:layout_gravity="center"
        android:id="@+id/company_image"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginBottom="20dp"
        app:srcCompat="@drawable/bestbuy" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/company_name"
            style="@style/info_window_title_text" />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
        <ImageView
            style="@style/info_style"
            app:srcCompat="@drawable/pin_info" />
        <TextView
            android:id="@+id/address"
            style="@style/data_info" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <ImageView
                style="@style/info_style"
                app:srcCompat="@drawable/phone_info" />
            <TextView
                android:id="@+id/phone"
                style="@style/data_info" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <ImageView
                style="@style/info_style"
                app:srcCompat="@drawable/time_info" />
            <TextView
                android:id="@+id/opening"
                style="@style/data_info" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <ImageView
                app:srcCompat="@drawable/web_info"
                style="@style/info_style" />
            <TextView
                android:id="@+id/website"
                style="@style/data_info" />
        </LinearLayout>

    </LinearLayout>

    </LinearLayout>

</LinearLayout>